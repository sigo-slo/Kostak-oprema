<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B0007CFF"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/cardview_light_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/slika2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/slika_opreme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/teal_700"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/slika2"
                app:layout_constraintTop_toTopOf="@+id/slika2"
                tools:text="št." />

            <TextView
                android:id="@+id/txtInv_st"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Oznaka_nahajalisce"
                app:layout_constraintTop_toBottomOf="@+id/txtOpis"
                tools:text="Številka opreme " />

            <TextView
                android:id="@+id/Oznaka_inv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:text="@string/id_number"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txtOpis"
                app:layout_constraintTop_toBottomOf="@+id/txtOpis"
                tools:text="Številka opreme " />

            <TextView
                android:id="@+id/txtOpis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:textColor="@color/teal_700"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtrow"
                app:layout_constraintTop_toTopOf="@+id/slika2"
                tools:ignore="TextViewEdits"
                tools:text="Opis opreme" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:gravity="center|left"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Oznaka_nahajalisce"
                app:layout_constraintTop_toBottomOf="@+id/txtInv_st"
                tools:ignore="RtlHardcoded"
                tools:text="Status" />

            <TextView
                android:id="@+id/Oznaka_nahajalisce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/status"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txtOpis"
                app:layout_constraintTop_toBottomOf="@+id/Oznaka_inv"
                tools:text="Status" />

            <TextView
                android:id="@+id/txtdays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtdays3"
                app:layout_constraintTop_toBottomOf="@+id/txtStatus"
                tools:ignore="RtlHardcoded"
                tools:text="Dnevi uporabe" />

            <TextView
                android:id="@+id/txtdays3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/days"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txtOpis"
                app:layout_constraintTop_toBottomOf="@+id/Oznaka_nahajalisce"
                tools:text="Oznaka_št_dni_v_uporabi" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>